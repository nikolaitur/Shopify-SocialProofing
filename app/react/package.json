{
  "name": "polaris-browserify-example",
  "private": true,
  "version": "1.0.0",
  "description": "A Polaris example application using Browserify",
  "main": "index.js",
  "scripts": {
    "prebuild": "shx rm -rf build && shx mkdir build && shx cp src/index.html build",
    "build": "browserify src/index.js -o build/bundle.js",
    "start": "yarn build && budo src/index.js:bundle.js --dir build --live --open"
  },
  "dependencies": {
    "@shopify/polaris": "^1.0.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "babel-preset-env": "^1.3.3",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "budo": "^9.4.7",
    "shx": "^0.2.2"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env",
            "react"
          ]
        }
      ]
    ]
  },
  "license": "MIT"
}
